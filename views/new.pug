extends layout
block main
    .container
        .row.col-lg-6.col-lg-offset-3
                form(action="/campgrounds" method="POST")
                    .form-group.text-center
                        h1 Create a new campground
                    .form-group
                        input.form-control(type="text" name="name" placeholder="name")
                    .form-group
                        input.form-control(type="number" name="price" placeholder="price" min='0.01' step='0.01')
                    .form-group
                        input.form-control(type="text" name="image" placeholder="image url")
                    .form-group
                        input.form-control(type="text" name="description" placeholder="description...")    
                    .form-group
                        button.btn.btn-lg.btn-primary.btn-block Submit
                a(href='/campgrounds') Go back